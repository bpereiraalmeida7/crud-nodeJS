<% include partials/head %>
<body>
    <div class="container">
        <br>
        <div class="col-lg-12" style="text-align: right;">
            <a class="btn btn-outline-info btn-sm" href="/">Voltar</a>
        </div>
        <h3>Registros</h3>
            <table border="1" id="example" class="table table-striped table-bordered" style="width:100%">
                <thead>
                    <tr>
                        <td>Nome</td>
                        <td>Sobrenome</td>
                        <td>Ação</td>
                    </tr>
                </thead>
                <tbody>
                <% data.forEach(function(details) { %>
                    <tr>
                        <td><%= details.name %></td>
                        <td><%= details.surname %></td>
                        
                        <td><a href="/edit/<%= details._id %>" class="btn btn-success btn-sm">
                            <i class="fas fa-user-edit"></i> Editar 
                          </a> <a href="/delete/<%= details._id %>" class="btn btn-danger btn-sm">
                            <i class="fas fa-user-times"></i> Deletar 
                          </a></td>
                    </tr>
                    <% }) %>
                </tbody>
        </table>
    </div>
<% include partials/script %>
<script>
    $(document).ready(function() {
        $('#example').DataTable({
        language: {
        processing:     "Buscando registros...",
        search:         "Buscar",
        lengthMenu:    "Exibir _MENU_ registros",
        info:           "Exibindo registros _START_ - _END_ de _TOTAL_ registro(s)",
        infoEmpty:      "Exibindo registros 0 - 0 de 0 registro(s)",
        infoFiltered:   "(filtrado de _MAX_ itens no total)",
        infoPostFix:    "",
        loadingRecords: "Buscando registros...",
        zeroRecords:    "Registro não encontrado",
        emptyTable:     "Sem dados cadastrados",
        paginate: {
            first:      "Primeiro",
            previous:   "Anterior",
            next:       "Próximo",
            last:       "Último"
        }
        }})
    } );

</script>        
</body>
</html>